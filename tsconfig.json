{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",

    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "noEmit": true,

    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    "useDefineForClassFields": true
  },
  "include": ["src"]
}
